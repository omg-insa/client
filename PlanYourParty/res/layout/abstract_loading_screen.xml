<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/splahScreen"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView android:src="@drawable/splash_screen"
		android:layout_height="fill_parent" android:layout_width="fill_parent"
		android:id="@+id/splahScreen" android:scaleType="fitXY"></ImageView>
	<ProgressBar android:layout_width="wrap_content"
		android:id="@+id/progressBarLoadingScreen" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></ProgressBar>
</RelativeLayout>
