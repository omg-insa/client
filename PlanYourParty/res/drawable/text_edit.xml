<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_focused="true">
    <shape>
        <gradient 
            android:startColor="#FFFFFF"
            android:endColor="#ABACB1"
            android:angle="270" />
        <stroke
            android:width="1dp" android:color="#3942C0" />
        <corners 
            android:radius="6dp" />
        <padding 
            android:left="10dp" 
            android:top="6dp" 
            android:right="10dp"
            android:bottom="6dp" />
    </shape>
  </item>
  <item>
    <shape>
